{
  "name": "cosmichub-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "CosmicHub - Astrology and Healing Frequency Applications",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "npm run validate-env",
    "build": "turbo build",
    "build:packages": "turbo build:packages",
    "build:apps": "turbo build:apps",
    "build:fast": "npm run build:apps",
    "dev": "turbo dev",
    "dev-frontend": "turbo dev-frontend",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "coverage:report": "nyc report --reporter=html --reporter=text --reporter=json-summary",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "validate-env": "node scripts/validate-env.mjs",
    "validate-env-schema": "node scripts/validate-env-schema.mjs"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/react": "18.3.23",
    "@types/react-dom": "18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.0.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/firebase": "^2.4.32",
    "ajv": "^8.17.1",
    "firebase": "^12.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "@types/react": "18.3.23",
    "@types/react-dom": "18.3.7"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "statements": 80,
    "branches": 75,
    "functions": 80,
    "lines": 80,
    "include": [
      "packages/**/*.{js,ts,tsx}",
      "apps/**/*.{js,ts,tsx}"
    ],
    "exclude": [
      "**/*.test.{js,ts,tsx}",
      "**/*.spec.{js,ts,tsx}",
      "**/dist/**",
      "**/node_modules/**"
    ]
  }
}
