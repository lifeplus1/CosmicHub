{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cosmichub.io/schema/env.schema.json",
  "title": "CosmicHub Public Environment Variables",
  "type": "object",
  "required": ["VITE_API_URL", "VITE_FIREBASE_API_KEY", "VITE_FIREBASE_PROJECT_ID", "VITE_FIREBASE_APP_ID"],
  "additionalProperties": true,
  "properties": {
    "VITE_API_URL": { "type": "string", "pattern": "^https://" },
    "VITE_FIREBASE_API_KEY": { "type": "string", "minLength": 20 },
    "VITE_FIREBASE_PROJECT_ID": { "type": "string", "minLength": 3 },
    "VITE_FIREBASE_APP_ID": { "type": "string", "minLength": 10 },
    "VITE_FIREBASE_AUTH_DOMAIN": { "type": "string" },
    "VITE_FIREBASE_STORAGE_BUCKET": { "type": "string" },
    "VITE_FIREBASE_MESSAGING_SENDER_ID": { "type": "string" },
    "VITE_ENABLE_ANALYTICS": { "type": "string", "enum": ["true", "false"] },
    "VITE_ENABLE_ERROR_REPORTING": { "type": "string", "enum": ["true", "false"] },
    "VITE_ENABLE_PERFORMANCE_MONITORING": { "type": "string", "enum": ["true", "false"] },
    "VITE_STRIPE_PUBLISHABLE_KEY": { "type": "string", "minLength": 20 }
  }
}
