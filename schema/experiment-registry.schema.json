{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cosmichub.app/schemas/experiment-registry.json",
  "title": "CosmicHub Experiment Registry Schema",
  "description": "JSON schema for documenting and validating experiments in the CosmicHub platform",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the experiment (letters, numbers, underscores, and hyphens only)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Human-readable name of the experiment"
    },
    "hypothesis": {
      "type": "string",
      "minLength": 10,
      "maxLength": 1000,
      "description": "Detailed description of the experiment's hypothesis"
    },
    "description": {
      "type": "string",
      "maxLength": 2000,
      "description": "Additional context and background for the experiment"
    },
    "metrics": {
      "type": "object",
      "properties": {
        "primary": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "The primary metric to evaluate experiment success (e.g., conversion_rate)"
        },
        "guardrails": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "minItems": 0,
          "maxItems": 20,
          "description": "Array of guardrail metrics to monitor for safety"
        },
        "secondary": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "maxItems": 10,
          "description": "Optional secondary metrics for additional analysis"
        }
      },
      "required": ["primary", "guardrails"],
      "additionalProperties": false
    },
    "variants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "pattern": "^[a-zA-Z0-9_-]+$",
            "description": "Variant identifier"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Human-readable variant name"
          },
          "description": {
            "type": "string",
            "maxLength": 500,
            "description": "Optional variant description"
          },
          "traffic_percentage": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Percentage of traffic allocated to this variant"
          },
          "config": {
            "type": "object",
            "description": "Variant-specific configuration parameters"
          }
        },
        "required": ["id", "name", "traffic_percentage"],
        "additionalProperties": false
      },
      "minItems": 2,
      "maxItems": 10,
      "description": "Array of experiment variants (minimum 2: control + treatment)"
    },
    "start_date": {
      "type": "string",
      "format": "date-time",
      "description": "Start date and time of the experiment in ISO 8601 format"
    },
    "end_date": {
      "type": "string",
      "format": "date-time",
      "description": "End date and time of the experiment in ISO 8601 format"
    },
    "segment": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "User segment or group targeted by the experiment"
    },
    "owner": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "format": "email",
      "description": "Owner or responsible party for the experiment (email address)"
    },
    "status": {
      "type": "string",
      "enum": ["planned", "running", "completed", "aborted", "analyzing"],
      "description": "Current status of the experiment"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 50
      },
      "maxItems": 10,
      "uniqueItems": true,
      "description": "Tags for categorizing and searching experiments"
    },
    "config": {
      "type": "object",
      "properties": {
        "sample_size": {
          "type": "integer",
          "minimum": 10,
          "maximum": 1000000,
          "description": "Target sample size per variant"
        },
        "statistical_power": {
          "type": "number",
          "minimum": 0.1,
          "maximum": 0.99,
          "default": 0.8,
          "description": "Statistical power (1 - β) for the experiment"
        },
        "significance_level": {
          "type": "number",
          "minimum": 0.01,
          "maximum": 0.1,
          "default": 0.05,
          "description": "Significance level (α) for hypothesis testing"
        },
        "minimum_detectable_effect": {
          "type": "number",
          "minimum": 0.001,
          "maximum": 1.0,
          "description": "Minimum detectable effect size"
        },
        "randomization_unit": {
          "type": "string",
          "enum": ["user", "session", "pageview"],
          "default": "user",
          "description": "Unit of randomization for the experiment"
        }
      },
      "additionalProperties": false,
      "description": "Statistical and technical configuration for the experiment"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the experiment was created"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the experiment was last updated"
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Schema version for migration support"
    }
  },
  "required": [
    "id",
    "name",
    "hypothesis",
    "metrics",
    "variants",
    "start_date",
    "end_date",
    "segment",
    "owner",
    "status"
  ],
  "additionalProperties": false,
  "examples": [
    {
      "id": "ai_interpretation_test_001",
      "name": "AI Interpretation A/B Test - Detailed vs Concise",
      "hypothesis": "Users prefer more detailed AI interpretations over concise ones, leading to higher engagement and retention",
      "description": "Testing two variants of AI interpretation length to optimize user experience and engagement",
      "metrics": {
        "primary": "user_engagement_score",
        "guardrails": ["session_duration", "bounce_rate", "error_rate"],
        "secondary": ["interpretation_rating", "time_on_page"]
      },
      "variants": [
        {
          "id": "control",
          "name": "Current (Concise)",
          "description": "Existing concise interpretation format",
          "traffic_percentage": 50,
          "config": {
            "max_interpretation_length": 500,
            "include_examples": false
          }
        },
        {
          "id": "detailed",
          "name": "Detailed Interpretations",
          "description": "Longer, more detailed interpretations with examples",
          "traffic_percentage": 50,
          "config": {
            "max_interpretation_length": 1500,
            "include_examples": true,
            "include_actionable_advice": true
          }
        }
      ],
      "start_date": "2025-09-01T00:00:00Z",
      "end_date": "2025-09-30T23:59:59Z",
      "segment": "premium_users",
      "owner": "experiments@cosmichub.app",
      "status": "planned",
      "tags": ["ai", "ux", "interpretation", "engagement"],
      "config": {
        "sample_size": 1000,
        "statistical_power": 0.8,
        "significance_level": 0.05,
        "minimum_detectable_effect": 0.05,
        "randomization_unit": "user"
      },
      "version": 1
    }
  ]
}
