# Environment Variables Template
# Copy to .env and fill with your values

###############################
# Frontend (public) Variables #
###############################
# Only VITE_* names are exposed to the client bundle
# Do not put secrets or server-only keys here. Anything not prefixed with VITE_
# will not be available to the frontend and will be placed in backend/.env by
# scripts/sync-env.mjs.
VITE_API_URL=http://localhost:8000

# Firebase (client SDK) â€” public identifiers, rotate regularly
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=000000000000
VITE_FIREBASE_APP_ID=1:000000000000:web:abcdefghijklmno

# Optional Feature Flags
VITE_ENABLE_ANALYTICS=false

# xAI Configuration
VITE_XAI_API_KEY=your_xai_api_key_here

# Stripe Configuration (test keys for development)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE  
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Server-only examples (not copied to frontend)
# API_KEY=dev-placeholder-key
# DATABASE_URL=postgresql://user:pass@localhost:5432/cosmichub_dev
# REDIS_URL=redis://localhost:6379
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

##############################
# Backend / Server-only Vars #
##############################
# DO NOT expose these to frontend builds
API_URL=http://localhost:8000
DATABASE_URL=postgresql://user:pass@localhost:5432/cosmichub_dev
REDIS_URL=redis://localhost:6379
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# xAI Configuration (server-side fallback)
XAI_API_KEY=your_xai_api_key_here

# Runtime / deployment metadata (derived automatically in CI preferred)
DEPLOY_ENVIRONMENT=development

##############################
# Local Dev Convenience Vars #
##############################
NODE_ENV=development
LOG_LEVEL=debug
LOG_FORMAT=plain

# Remove legacy vars: VITE_APP_ENV, API_KEY, EPHE_PATH if unused

## End of template
