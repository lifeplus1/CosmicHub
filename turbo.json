{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["NODE_ENV"],
      "outputLogs": "new-only"
    },
    "build:packages": {
      "dependsOn": [],
      "outputs": ["dist/**"],
      "cache": true,
      "env": ["NODE_ENV"],
      "outputLogs": "new-only"
    },
    "build:apps": {
      "dependsOn": [],
      "outputs": ["dist/**"],
      "cache": true,
      "env": ["NODE_ENV", "VITE_*"],
      "outputLogs": "new-only"
    },
    "build:ephemeris": {
      "dependsOn": [],
      "outputs": ["requirements.txt"],
      "cache": true,
      "env": ["EPHE_PATH", "API_KEY"],
      "outputLogs": "new-only"
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "PORT", "VITE_*"],
      "outputLogs": "new-only"
    },
    "dev-frontend": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "PORT", "VITE_*"],
      "outputLogs": "new-only"
    },
    "test": {
      "dependsOn": ["^build:packages"],
      "outputs": [],
      "env": ["NODE_ENV"],
      "outputLogs": "new-only"
    },
    "test:ephemeris": {
      "dependsOn": [],
      "outputs": ["htmlcov/**", ".coverage"],
      "cache": true,
      "env": ["NODE_ENV", "EPHE_PATH"],
      "outputLogs": "new-only"
    },
    "lint": {
      "outputs": [".eslintcache"],
      "env": ["NODE_ENV"],
      "outputLogs": "errors-only"
    },
    "type-check": {
      "dependsOn": ["^build:packages"],
      "outputs": [],
      "env": ["NODE_ENV"],
      "outputLogs": "errors-only"
    },
    "clean": {
      "cache": false,
      "outputs": [],
      "outputLogs": "new-only"
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "env": ["NODE_ENV", "PORT"],
      "outputLogs": "new-only"
    }
  },
  "globalEnv": ["NODE_ENV"],
  "globalDependencies": [
    "package.json",
    "turbo.json",
    "tsconfig*.json",
    ".env*"
  ]
}
