{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "outDir": "./dist",
    "rootDir": "../../",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
  // Standardize lib target (ES2022)
  "lib": ["ES2022", "DOM", "DOM.Iterable"]
  },
  "include": [
    "src/**/*",
    "src/vite-env.d.ts",
    "../config/src/**/*"
  ],
  "exclude": ["dist", "node_modules"]
}
