{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "rootDir": "./src"
  },
  "include": [
    "src/index.ts",
    "src/config.ts",
    "src/env.ts", 
    "src/lazy-loading.tsx",
    "src/performance.ts",
    "src/vite-env.d.ts"
  ],
  "exclude": [
    "dist", 
    "node_modules", 
    "**/*.test.*", 
    "**/*.spec.*",
    "src/optimization/**",
    "src/testing/**"
  ]
}
