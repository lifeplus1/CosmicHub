{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
  // Standardize lib target with workspace (ES2022)
  "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "rootDir": "./src",
  // Types inherited from root/base config (react, react-dom, node).
  // Vite client types provided via local vite-env.d.ts triple-slash reference to avoid duplication.
  },
  "include": [
    "src/index.ts",
    "src/config.ts",
    "src/env.ts", 
    "src/firebase.ts",
    "src/lazy-loading.tsx",
    "src/performance.ts",
    "src/push-notifications.ts",
    "src/background-sync-enhanced.ts",
    "src/hooks/index.ts",
    "src/hooks/usePerformance.ts",
    "src/vite-env.d.ts"
  ],
  "exclude": [
    "dist", 
    "node_modules", 
    "**/*.test.*", 
    "**/*.spec.*",
    "src/optimization/**",
    "src/testing/**"
  ]
}
