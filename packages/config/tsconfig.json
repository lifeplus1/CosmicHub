{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    // Standardize lib target with workspace (ES2022)
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "rootDir": "./src",
    // Allow for properly resolved type declarations
    "skipLibCheck": true,
    "paths": {
      "@cosmichub/config/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "vite-env.d.ts"],
  "exclude": [
    "dist", 
    "node_modules", 
    "**/*.test.*", 
    "**/*.spec.*",
    "src/enhanced-testing.tsx",
    "src/optimization/**",
    "src/testing/**"
  ]
}
