{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    // Emit both JS and type declarations so consuming packages resolve runtime modules
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "exclude": ["**/*.test.*", "**/*.spec.*", "dist", "node_modules"]
}
