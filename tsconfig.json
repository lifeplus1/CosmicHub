{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@cosmichub/auth": ["./packages/auth/src"],
      "@cosmichub/config": ["./packages/config/src"],
      "@cosmichub/frequency": ["./packages/frequency/src"],
      "@cosmichub/integrations": ["./packages/integrations/src"],
      "@cosmichub/ui": ["./packages/ui/src"]
    }
  },
  "include": [
    "src/**/*",
    "apps/**/*",
    "packages/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo",
    "build",
    "**/*.js"
  ],
  "references": [
    { "path": "./packages/auth" },
    { "path": "./packages/config" },
    { "path": "./packages/frequency" },
    { "path": "./packages/integrations" },
    { "path": "./packages/ui" },
    { "path": "./apps/astro" },
    { "path": "./apps/healwave" }
  ],
  "files": []
}
